from random import randint
print(10*'-')
print('Adivinhe o numero sorteado de 1 a 20')
tentativas = 6
sorteio = randint(1, 20)
while tentativas > 0:
    print(10*'-')
    print(f'tentativas restantes: {tentativas}')
    sugestao = int(input('Sugestão do numero sorteado: '))
    print(10*'-')
    if sugestao == 0 or sugestao > 20:
        print('O numero soteado está entre 1 e 20 tente novamente')
        tentativas -= 1
    elif sugestao < sorteio:
        print(f'O numero sorteado é maior do que {sugestao}')
        tentativas -= 1
    elif sugestao > sorteio:
        print(f'O numero sorteado é menor do que {sugestao}')
        tentativas -= 1
    else:
        break
if sugestao == sorteio:
    print(f'Muito bem você acertou o numero sorteado em {7 - tentativas} tentativas')
else:
    print(f'O numero sorteado era {sorteio} Você perdeu!!!')
